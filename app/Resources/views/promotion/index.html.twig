{% extends 'base.html.twig' %}

{% block body %}
    <h1>Promotions list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Promotionableid</th>
                <th>Promotionabletype</th>
                <th>Discount</th>
                <th>Startdate</th>
                <th>Enddate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td><a href="{{ path('promotion_show', { 'id': promotion.id }) }}">{{ promotion.id }}</a></td>
                <td>{{ promotion.promotionableId }}</td>
                <td>{{ promotion.promotionableType }}</td>
                <td>{{ promotion.discount }}</td>
                <td>{{ promotion.startDate|date('Y-m-d') }}</td>
                <td>{{ promotion.endDate|date('Y-m-d') }}</td>
                <td>
                    <a class="btn btn-default" href="{{ path('promotion_show', { 'id': promotion.id }) }}">show</a>
                    <a class="btn btn-default" href="{{ path('promotion_edit', { 'id': promotion.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-primary" href="{{ path('promotion_new') }}">Create a new promotion</a>

{% endblock %}

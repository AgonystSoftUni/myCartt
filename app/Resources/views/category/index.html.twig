{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-md-6 col-md-offset-3">
        <h1>Categories list</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-default" href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                        <a class="btn btn-default" href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('category_new') }}">Create a new category</a>
    </div>
{% endblock %}

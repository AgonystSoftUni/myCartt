{% extends 'baseWithCategories.html.twig' %}

{% block body %}

        <div class="panel panel-default">
            <h1 class="text-center">{{ category.name }}</h1>
        </div>
        {% if(is_granted('ROLE_ADMIN')) %}
            <a class="btn btn-default" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
            {{ form_start(delete_form) }}
            <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        {% endif %}
            {#{% for promotion in category.promotions %}#}
                {#{{ promotion.discount }}#}
            {#{% endfor %}#}



            {% for product in category.products %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" >
                        <img src="http://placehold.it/650x450&text=Galaxy S5" class="img-responsive">
                        <div class="caption">
                            <div class="row">
                                <div class="col-md-6 col-xs-6">
                                    <h3>{{ product.name  }}</h3>
                                </div>
                                <div class="col-md-6 col-xs-6 price">
                                    <h3>
                                        <label>{{ product.price }} лв.</label>
                                    </h3>
                                </div>
                            </div>
                            <p>{{ product.description }}</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <a class="btn btn-primary col-xs-6"><span class="glyphicon glyphicon-arrow-right"></span>View</a>
                                </div>
                                <div class="col-md-6">
                                    <form action="/cart/new" method="post">
                                        <input type="text" name="quantity">
                                        <input type="hidden" name="product_id" value="{{ product.id }}">
                                        <button class="btn btn-success col-xs-6"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</button>
                                    </form>
                                </div>
                            </div>

                            <p> </p>
                        </div>
                    </div>
                </div>

            {% endfor %}


{% endblock %}
